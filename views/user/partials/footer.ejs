 <style>
   /* Reset and Base Styles */
   * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: Arial, sans-serif;
      background-color: #ffffff;
      color: #ffffff;
      line-height: 1.6;
    }
    
    a {
      text-decoration: none;
      color: #000000;
    }
    
    img {
      max-width: 100%;
      height: auto;
    }
    
    /* Navbar Styles */
    .navbar {
      background-color:white;
      /*     rgba(6, 12, 28, 1) */
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 1000;
      height: 65px;
      display: flex;
      align-items: center;
    }
    
    .navbar-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      padding: 0 20px;
    }
    
    .navbar-brand img {
      height: 40px;
    }
    
    .navbar-links {
      display: flex;
      gap: 30px;
    }
    
    .nav-link {
      color: #000000;
      font-size: 14px;
      font-weight: 600;
      letter-spacing: 1px;
      transition: color 0.3s;
    }
    
    .nav-link:hover {
      color: #00a8ff;
    }
    
    .navbar-actions {
      display: flex;
      gap: 20px;
      align-items: center;
    }
    
    .nav-icon {
      color: #000000;
      font-size: 18px;
      transition: color 0.3s;
    }
    
    .nav-icon:hover {
      color: #00a8ff;
    }
    .menu-toggle {
      display: none;
      font-size: 22px;
      color: rgb(0, 0, 0);
      cursor: pointer;
    }

    /* Responsive styles */
    @media (max-width: 768px) {
      .menu-toggle {
        display: block;
      }

      .navbar-links {
        position: absolute;
        top: 65px;
        left: 0;
        width: 100%;
        background-color: rgb(255, 255, 255);
        border: 1px solid rgb(105, 104, 104);
        flex-direction: column;
        gap: 10px;
        padding: 10px 20px;
        display: none;
      }

      .navbar-links.active {
        display: flex;
      }

      .navbar-actions {
        gap: 10px;
      }
    }



    /* User Profile Modal */
    .profile-modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 1000;
      align-items: center;
      justify-content: center;
    }

    .profile-modal.active {
      display: flex;
    }

    .profile-content {
      position: relative;
      background-color: black;
      color: white;
      width: 100%;
      max-width: 350px;
      padding: 30px 20px;
    }

    .close-btn {
      position: absolute;
      top: 10px;
      right: 10px;
      background: none;
      border: none;
      color: white;
      font-size: 18px;
      cursor: pointer;
    }

    .profile-header {
      text-align: center;
      text-transform: uppercase;
      font-size: 14px;
      margin-bottom: 20px;
    }

    .profile-avatar {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      border: 2px solid white;
      margin: 0 auto 20px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .avatar-inner {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      border: 2px solid white;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .profile-name {
      text-align: center;
      text-transform: uppercase;
      font-weight: 500;
      margin-bottom: 10px;
    }

    .profile-divider {
      border-top: 1px solid #444;
      margin: 15px 0;
    }

    .wallet-balance {
      text-align: center;
      font-size: 14px;
      margin-bottom: 20px;
    }

    .profile-button {
      display: block;
      width: 100%;
      padding: 8px 0;
      margin-bottom: 10px;
      background: none;
      border: 1px solid white;
      color: white;
      text-transform: uppercase;
      font-size: 12px;
      cursor: pointer;
      transition: all 0.2s;
    }

    .profile-button:hover {
      background-color: white;
      color: black;
    }
    
    /* Main Content Styles */
    main {
      margin-top: 60px;
      padding: 20px;
      max-width: 1200px;
      margin-left: auto;
      margin-right: auto;
    }
    
    /* Featured Slider */
    .featured-slider {
      margin-bottom: 40px;
      position: relative;
    }
    
    .slider-container {
      position: relative;
      overflow: hidden;
      border-radius: 8px;
    }
    
    .slider-content {
      position: relative;
    }
    
    .slider-item {
      display: none;
    }
    
    .slider-item.active {
      display: block;
    }
    
    .slider-item img {
      width: 100%;
      height: auto;
      display: block;
    }
    
    .slider-caption {
      position: absolute;
      bottom: 40px;
      left: 40px;
      color: #ffffff;
    }
    
    .slider-caption h2 {
      font-size: 36px;
      font-weight: 700;
      margin-bottom: 5px;
    }
    
    .slider-caption h1 {
      font-size: 48px;
      font-weight: 800;
      margin-bottom: 20px;
    }
    
    .game-info {
      display: flex;
      align-items: center;
      gap: 20px;
    }
    
    .game-info span {
      font-size: 14px;
    }
    
    .slider-arrow {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background-color: rgba(44, 37, 37, 0.5);
      color: #ffffff;
      border: none;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      z-index: 10;
      transition: background-color 0.3s;
    }
    
    .slider-arrow:hover {
      background-color: rgba(255, 255, 255, 0.8);
    }
    
    .slider-arrow.prev {
      left: 20px;
    }
    
    .slider-arrow.next {
      right: 20px;
    }
    
    .slider-dots {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-top: 15px;
    }
    
    .dot {
      width: 10px;
      height: 10px;
      background-color: #555555;
      border-radius: 50%;
      cursor: pointer;
      transition: background-color 0.3s;
    }
    
    .dot.active {
      background-color: #363535;
    }

    /* Upcoming Games Slider */
    .upcoming-slider {
      position: relative;
      margin-bottom: 40px;
      overflow: hidden;
    }

    .upcoming-slider-container {
      display: flex;
      transition: transform 0.5s ease;
    }

    .upcoming-slide {
      min-width: 100%;
      position: relative;
      display: none;
    }

    .upcoming-slide.active {
      display: block;
    }

    .upcoming-slide .game-card {
      height: 400px;
      width: 100%;
    }

    .upcoming-slider-arrows {
      position: absolute;
      top: 50%;
      width: 100%;
      display: flex;
      justify-content: space-between;
      transform: translateY(-50%);
      pointer-events: none;
      padding: 0 20px;
    }

    .upcoming-slider-arrow {
      pointer-events: auto;
      background-color: rgba(0, 0, 0, 0.5);
      color: white;
      border: none;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      z-index: 10;
      transition: background-color 0.3s;
    }

    .upcoming-slider-arrow:hover {
      background-color: rgba(0, 0, 0, 0.8);
    }

    .upcoming-slider-dots {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-top: 15px;
    }
    .upcoming-title{
      position: absolute;
      bottom: 20px;
      left: 20px;
      color: #ffffff;
      font-size: 18px;
      font-weight: 300;
      text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.8);
    }
    .upcoming-info{
      position: absolute;
      bottom: 10px;
      left: 25px;
      color: #ffffff;
      font-size: 10px;
      font-weight: 30;
      text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.8);
    }

    .upcoming-dot {
      width: 10px;
      height: 10px;
      background-color: #555555;
      border-radius: 50%;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .upcoming-dot.active {
      background-color: #363535;
    }
    

    
    .see-more {
      text-align: center;
      margin-top: 20px;
    }
    
    .see-more a {
      color: #0249ce;
      font-size: 14px;
      transition: color 0.3s;
    }
    
    .see-more a:hover {
      color: #128dd4;
    }
    
    /* Popular Slider */
    .popular-slider {
      position: relative;
    }
    
    /* Pagination */
    .pagination {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin: 40px 0;
    }
    
    .pagination span {
      width: 30px;
      height: 30px;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: #222222;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s;
    }
    
    .pagination span:hover {
      background-color: #333333;
    }
    
    /* Footer Styles */
    .confany-footer {
      background-color: #f8f9fa;
      padding: 40px 0 20px;
      font-family: Arial, sans-serif;
      color: #333;
      border-top: 1px solid #e0e0e0;
    }
    
    .footer-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }
    
    .footer-content {
      display: flex;
      align-items: flex-start;
      gap: 40px;
      margin-bottom: 30px;
    }
    
    .footer-brand {
      flex: 0 0 200px;
    }
    
    .footer-logo {
      max-width: 90px;
      height: auto;
    }
    
    .footer-links {
      flex: 1;
    }
    
    .footer-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 30px;
    }
    
    .footer-column {
      display: flex;
      flex-direction: column;
    }
    
    .footer-header {
      font-weight: bold;
      font-size: 1.1rem;
      margin-bottom: 15px;
      color: #000;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    
    .footer-column a {
      color: #555;
      text-decoration: none;
      margin-bottom: 10px;
      transition: color 0.2s;
      font-size: 0.95rem;
    }
    
    .footer-column a:hover {
      color: #000;
      text-decoration: underline;
    }
    
    .footer-legal {
      border-top: 1px solid #ddd;
      padding-top: 20px;
      font-size: 0.85rem;
      line-height: 1.5;
