  <script>
    document.addEventListener("DOMContentLoaded", function () {
      // navbar dropdown
      const menuToggle = document.getElementById('menuToggle');
      const navbarLinks = document.getElementById('navbarLinks');

      menuToggle.addEventListener('click', () => {
        navbarLinks.classList.toggle('active');
      });

      // Search functionality
      const searchIcon = document.getElementById("searchIcon");
      const searchContainer = document.getElementById("searchContainer");
      const userIcon = document.getElementById("userIcon");
      const profileModal = document.getElementById("profileModal");
      const closeModal = document.getElementById("closeModal");
      
      // Toggle search bar
      searchIcon.addEventListener("click", function(e) {
        e.preventDefault();
        searchContainer.classList.toggle("active");
      });
      
      // Toggle profile modal
      userIcon.addEventListener("click", function(e) {
        e.preventDefault();
        profileModal.classList.add("active");
      });
      
      closeModal.addEventListener("click", function() {
        profileModal.classList.remove("active");
      });
      
      // Close modal when clicking outside
      profileModal.addEventListener("click", function(e) {
        if (e.target === profileModal) {
          profileModal.classList.remove("active");
        }
      });

      // Featured Slider
      const featuredSlides = document.querySelectorAll(".featured-slider .slider-item");
      const featuredDots = document.querySelectorAll(".featured-slider .dot");
      const featuredPrevBtn = document.querySelector(".featured-slider .prev");
      const featuredNextBtn = document.querySelector(".featured-slider .next");

      let featuredCurrentIndex = 0;
      let featuredSlideInterval;

      function showFeaturedSlide(index) {
          featuredSlides.forEach((slide, i) => {
              slide.classList.remove("active");
              featuredDots[i]?.classList.remove("active");
          });

          featuredSlides[index].classList.add("active");
          featuredDots[index]?.classList.add("active");
      }

      function nextFeaturedSlide() {
          featuredCurrentIndex = (featuredCurrentIndex + 1) % featuredSlides.length;
          showFeaturedSlide(featuredCurrentIndex);
      }

      function prevFeaturedSlide() {
          featuredCurrentIndex = (featuredCurrentIndex - 1 + featuredSlides.length) % featuredSlides.length;
          showFeaturedSlide(featuredCurrentIndex);
      }

      function startFeaturedAutoSlide() {
          featuredSlideInterval = setInterval(nextFeaturedSlide, 3000);
      }

      function stopFeaturedAutoSlide() {
          clearInterval(featuredSlideInterval);
      }

      function resetFeaturedAutoSlide() {
          stopFeaturedAutoSlide();
          startFeaturedAutoSlide();
      }

      if (featuredNextBtn && featuredPrevBtn) {
          featuredNextBtn.addEventListener("click", () => {
              nextFeaturedSlide();
              resetFeaturedAutoSlide();
          });

          featuredPrevBtn.addEventListener("click", () => {
              prevFeaturedSlide();
              resetFeaturedAutoSlide();
          });
      }

      featuredDots.forEach((dot, i) => {
          dot.addEventListener("click", () => {
              featuredCurrentIndex = i;
              showFeaturedSlide(featuredCurrentIndex);
              resetFeaturedAutoSlide();
          });
      });

      // Initialize Featured Slider
      showFeaturedSlide(featuredCurrentIndex);
      startFeaturedAutoSlide();

      // Pause autoplay when hovering over slider
      const featuredSlider = document.querySelector(".featured-slider");
      if (featuredSlider) {
          featuredSlider.addEventListener("mouseenter", stopFeaturedAutoSlide);
          featuredSlider.addEventListener("mouseleave", startFeaturedAutoSlide);
      }

      // Upcoming Games Slider
      const upcomingSlides = document.querySelectorAll(".upcoming-slide");
      const upcomingPrevBtn = document.getElementById("upcomingPrev");
      const upcomingNextBtn = document.getElementById("upcomingNext");
      const upcomingDotsContainer = document.getElementById("upcomingDots");

      let upcomingCurrentIndex = 0;
      let upcomingSlideInterval;

      // Create dots
      upcomingSlides.forEach((_, index) => {
        const dot = document.createElement("span");
        dot.classList.add("upcoming-dot");
        dot.dataset.index = index;
        if (index === 0) dot.classList.add("active");
        upcomingDotsContainer.appendChild(dot);
      });

      const upcomingDots = document.querySelectorAll(".upcoming-dot");

      function showUpcomingSlide(index) {
          upcomingSlides.forEach((slide, i) => {
              slide.classList.remove("active");
              upcomingDots[i]?.classList.remove("active");
          });

          upcomingSlides[index].classList.add("active");
          upcomingDots[index]?.classList.add("active");
      }

      function nextUpcomingSlide() {
          upcomingCurrentIndex = (upcomingCurrentIndex + 1) % upcomingSlides.length;
          showUpcomingSlide(upcomingCurrentIndex);
      }

      function prevUpcomingSlide() {
          upcomingCurrentIndex = (upcomingCurrentIndex - 1 + upcomingSlides.length) % upcomingSlides.length;
          showUpcomingSlide(upcomingCurrentIndex);
      }

      function startUpcomingAutoSlide() {
          upcomingSlideInterval = setInterval(nextUpcomingSlide, 3000);
      }

      function stopUpcomingAutoSlide() {
          clearInterval(upcomingSlideInterval);
      }

      function resetUpcomingAutoSlide() {
          stopUpcomingAutoSlide();
          startUpcomingAutoSlide();
      }

      if (upcomingNextBtn && upcomingPrevBtn) {
          upcomingNextBtn.addEventListener("click", () => {
              nextUpcomingSlide();
              resetUpcomingAutoSlide();
          });

          upcomingPrevBtn.addEventListener("click", () => {
              prevUpcomingSlide();
              resetUpcomingAutoSlide();
          });
      }

      upcomingDots.forEach((dot, i) => {
          dot.addEventListener("click", () => {
              upcomingCurrentIndex = i;
              showUpcomingSlide(upcomingCurrentIndex);
              resetUpcomingAutoSlide();
          });
      });

      // Initialize Upcoming Slider
      showUpcomingSlide(upcomingCurrentIndex);
      startUpcomingAutoSlide();

      // Pause autoplay when hovering over slider
      const upcomingSlider = document.querySelector(".upcoming-slider");
      if (upcomingSlider) {
          upcomingSlider.addEventListener("mouseenter", stopUpcomingAutoSlide);
          upcomingSlider.addEventListener("mouseleave", startUpcomingAutoSlide);
      }
    });
  </script>
